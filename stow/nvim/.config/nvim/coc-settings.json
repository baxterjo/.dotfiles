{
  "coc.preferences.formatOnSaveFiletypes": ["json", "rust", "python", "go"],
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.locationlistUpdate": true,
  "diagnostic.refreshOnInsertMode": true,
  "rust-analyzer.diagnostics.enable": true,
  "rust-analyzer.inlayHints.chainingHints": true,
  "rust-analyzer.inlayHints.typeHints": true,
  "rust-analyzer.cargo.allFeatures": true,
  "yaml.format.enable": true,
  "yaml.schemas": {
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": "docker-*.yml"
  },
  "eslint.packageManager": "yarn",
  "eslint.nodePath": ".yarn/sdks",
  "sql.database": "postgresql",
  "go.goplsOptions": { "gofumpt": true }
}
