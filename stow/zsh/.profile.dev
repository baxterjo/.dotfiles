# Functions

# Disable error when using glob patterns that don't have matches
setopt +o nomatch

cheat() { curl -s "cheat.sh/$1"; }

# retrieve process real memory
psrm() {
  ps -o rss= -p $1 | awk '{ hr=$1/1024; printf "%13.2f Mb\n",hr }' | tr -d ' ';
}

psrml() {
  while true;
  do
    psrm $1;
    sleep 1;
  done
}

git_commit() {
  if [ -z "$3" ]
  then
    git commit -m "$1: $2"
  else
    git commit -m "$1($2): $3"
  fi
}

gshow() {
  open $(git remote -v | grep fetch | awk '{print $2}' | sed 's/git@/http:\/\//' | sed 's/com:/com\//' | head -n1);
}

# Aliases

if [ "$(command -v exa)" ]; then
  unalias -m 'll'
  unalias -m 'l'
  unalias -m 'la'
  unalias -m 'ls'
  alias ls="exa -G  --color auto --icons -a -s type"
  alias ll='exa -l --color always --icons -a -s type'
fi

alias yw="yarn workspace"
alias python=python3
alias cat="bat -p --paging=never"

# Conventional Commits
alias ccr="git_commit refactor"
alias cct="git_commit test"
